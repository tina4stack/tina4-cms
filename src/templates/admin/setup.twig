{% extends twigNameSpace ~ '/base.twig' %}
{% block headers %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.js"
        integrity="sha256-xLhce0FUawd11QSwrvXSwST0oHhOolNoH9cUXAcsIAg=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/additional-methods.js"
        integrity="sha256-NdDw7k+fJewgwI1XmH9NMR6OILvTX+3arqb/OgFicoM=" crossorigin="anonymous"></script>

<!-- Boostrap 4 CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/cerulean/bootstrap.min.css"
      integrity="sha384-3fdgwJw17Bi87e1QQ4fsLn4rUFqWw//KU0g8TvV6quvahISRewev6/EocKNuJmEw" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>

<!-- Boostrap JS -->
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
{%  endblock %}
{% block content %}
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4">
            <div class="card-header">
                <h4>Setup CMS <img width="128px" class="float-right" src="/src/public/images/logo.png"></h4>
            </div>
            <div class="card-body">
                <form id="setupForm" method="post">
                    <div class="form-group">
                        <label for="firstName"><b>First Name</b></label>
                        <input class="form-control" type="text" id="firstName" name="firstName" placeholder="First Name"
                               value="" autocomplete="on"/>
                    </div>
                    <div class="form-group">
                        <label for="lastName"><b>Last Name</b></label>
                        <input class="form-control" type="text" id="lastName" name="lastName" placeholder="Last Name"
                               value="" autocomplete="on"/>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" type="text" name="email" placeholder="Email Address"
                               autocomplete="on"/>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input class="form-control" id="password" type="password" name="password" placeholder="Password"
                               autocomplete="on"/>
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input class="form-control" type="password" name="confirmPassword"
                               placeholder="Confirm Password"
                               autocomplete="on"/>
                    </div>
                    <button class="btn btn-block btn-primary">Setup</button>
                    {{ "setup" | formToken | raw }}
                </form>
                <script>
                    $("#setupForm").validate({
                        rules: {
                            email: "required",
                            password: "required",
                            confirmPassword: {required: true, equalTo: "#password"}
                        },
                        messages: {
                            email: "Email address required",
                            password: "Password required",
                            confirmPassword: "Make sure you type the same value in again"
                        }
                    });
                </script>

            </div>
        </div>
    </div>


{% endblock %}