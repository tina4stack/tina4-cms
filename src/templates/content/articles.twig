{% set userRoles = Content.getSecurityAttribute('', session.user.roleId) %}
<table id="articleGrid" class="table table-striped table-bordered table-condensed" style="width:100%">
    <thead>
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Keywords</th>
        <th>Author</th>
        <th>Published Date</th>
        <th>Is Published</th>
        {% if (not userRoles.Content.Articles or userRoles.Content.Articles.edit) or  (not userRoles.Content.Articles or userRoles.Content.Articles.delete) %}
        <th>Options</th>
        {% endif %}
    </tr>
    </thead>
</table>
<script>
    var articleGrid = null;
    $(document).ready(function () {
        articleGrid = $('#articleGrid').DataTable({
            order: [[0, "desc"]],
            dom: '<"row"<"col-md-6"B><"col-md-4"f><"col-md-2"l>><rtip>',
            ajax: {
                url: '{{ baseUrl }}/api/admin/articles?siteId={{ session.siteId }}',
                data: function (d) {
                    d.formToken = formToken;
                }
            },
            columns: [
                {"data": "id"},
                {"data": "title"},
                {"data": "keywords"},
                {"data": "author"},
                {"data": "publishedDate"},
                {
                    "data": "isPublished",
                    "mRender": function (data, type, row) {
                        return (row.isPublished == 1) ? 'Yes' : 'No';
                    }
                },
                {% if (not userRoles.Content.Articles or userRoles.Content.Articles.edit) or  (not userRoles.Content.Articles or userRoles.Content.Articles.delete) %}
                {
                    "data": null,
                    "mRender": function (data, type, row) {
                        let html = '';
                        //loadForm parameters: api to retrieve modal form, target div id to load form to, row data, title of
                        {% if (not userRoles.Content.Articles or userRoles.Content.Articles.edit) %}
                        html += '<button class="btn btn-primary small-button" onclick="showForm(\'edit\',\'{{ baseUrl }}/api/admin/articles/' + row.id + '?siteId={{ session.siteId }}\')">Edit</button>';
                        {% endif %}
                        {% if (not userRoles.Content.Articles or userRoles.Content.Articles.delete) %}
                        html += ' <button class="btn btn-danger small-button" onclick="if (confirm(\'Delete  record ?\')) { showForm(\'delete\',\'{{ baseUrl }}/api/admin/articles/' + row.id + '?siteId={{ session.siteId }}\');}">Del</button>';
                        {% endif %}
                        return html;

                    },
                    "sClass": "text-right",
                    "searchable": false,
                    "orderable": false
                }
                {% endif %}

            ],
            processing: true,
            serverSide: true,
            responsive: true,
            buttons: [
                {% if (not userRoles.Content.Articles or userRoles.Content.Articles.create) %}
                {
                    text: 'Create',
                    action: function (e, dt, node, config) {
                        let data = {};
                        showForm('create', '{{ baseUrl }}/api/admin/articles/form?siteId={{ session.siteId }}');
                    }
                },
                {% endif %}
                'copy', 'excel', 'pdf', 'print'

            ]
        });
    });
</script>
<div id="form"></div>
<div id="message"></div>