{% set userRoles = Content.getSecurityAttribute('', session.user.roleId) %}
<table id="menuGrid" class="table table-striped table-bordered table-condensed" style="width:100%">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Parent Name</th>
        <th>Slug</th>
        <th>Specific Route</th>
        <th>Is Active</th>
        {% if (not userRoles.Content.Menus or userRoles.Content.Menus.edit) or  (not userRoles.Content.Menus or userRoles.Content.Menus.delete) %}
        <th>Options</th>
        {% endif %}
    </tr>
    </thead>
</table>
<script>
    var menuGrid = null;
    $(document).ready(function () {
        menuGrid = $('#menuGrid').DataTable({
            dom: '<"row"<"col-md-6"B><"col-md-4"f><"col-md-2"l>><rtip>',
            ajax: '/api/admin/menus?formToken={{ formToken('/api/admin/menus') }}&siteId={{ session.siteId }}',
            columns: [
                {"data": "id"},
                {"data": "name"},
                {"data": "parentName", "searchable": false},
                {"data": "slug"},
                {"data": "specificRoute"},
                {
                    "mRender": function (data, type, row) {
                        if (row.isActive == 1) {
                            return 'Yes'
                        } else {
                            return 'No'
                        }
                    }
                },
                {% if (not userRoles.Content.Menus or userRoles.Content.Menus.edit) or  (not userRoles.Content.Menus or userRoles.Content.Menus.delete) %}
                {
                    "mRender": function (data, type, row) {
                        if (row.name == 'Root') return "";
                        let html = '';
                        //loadForm parameters: api to retrieve modal form, target div id to load form to, row data, title of
                        {% if (not userRoles.Content.Menus or userRoles.Content.Menus.edit) %}
                        html += '<button class="btn btn-primary small-button" onclick="showForm(\'edit\',\'/api/admin/menus/' + row.id + '?formToken={{ formToken('/api/admin/menus') }}&siteId={{ session.siteId }}\')">Edit</button>';
                        {% endif %}
                        {% if (not userRoles.Content.Menus or userRoles.Content.Menus.delete) %}
                        html += ' <button class="btn btn-danger small-button" onclick="if (confirm(\'Delete  record ?\')) { showForm(\'delete\',\'/api/admin/menus/' + row.id + '?formToken={{ formToken('/api/admin/menus') }}&siteId={{ session.siteId }}\');}">Del</button>';
                        {% endif %}
                        return html;

                    },
                    "sClass": "text-right",
                    "searchable": false
                }
                {% endif %}

            ],
            processing: true,
            serverSide: true,
            responsive: true,
            buttons: [
                {% if (not userRoles.Content.Menus or userRoles.Content.Menus.create) %}
                {
                    text: 'Create',
                    action: function (e, dt, node, config) {
                        let data = {};
                        showForm('create', '/api/admin/menus/form?formToken={{ formToken('/api/admin/menus') }}&siteId={{ session.siteId }}');
                    }
                },
                {%  endif %}
                'copy', 'excel', 'pdf', 'print'

            ]
        });
    });
</script>
<div id="form"></div>
<div id="message"></div>