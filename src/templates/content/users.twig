{% set userRoles = Content.getSecurityAttribute('', session.user.roleId) %}
<table id="usersGrid" class="table table-striped table-bordered table-condensed" style="width:100%">
    <thead>
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Date Created</th>
        <th>Date Modified</th>
        {% if (not userRoles.Content.Users or userRoles.Content.Users.edit) or  (not userRoles.Content.Users or userRoles.Content.Users.delete) %}
        <th>Options</th>
        {%  endif %}
    </tr>
    </thead>
</table>
<script>
    var usersGrid = null;
    $(document).ready(function () {
        usersGrid = $('#usersGrid').DataTable({
            dom: '<"row"<"col-md-6"B><"col-md-4"f><"col-md-2"l>><rtip>',
            ajax: '/api/admin/users?formToken={{ formToken("/api/admin/users") }}&siteId={{ session.siteId }}',
            columns: [
                {"data": "id"},
                {"data": "firstName"},
                {"data": "lastName"},
                {"data": "email"},
                {"data": "dateCreated"},
                {"data": "dateModified"},
                {% if (not userRoles.Content.Users or userRoles.Content.Users.edit) or  (not userRoles.Content.Users or userRoles.Content.Users.delete) %}
                {
                    "mRender": function (data, type, row) {
                        let html = '';
                        //loadForm parameters: api to retrieve modal form, target div id to load form to, row data, title of
                        {% if (not userRoles.Content.Users or userRoles.Content.Users.edit) %}
                        html += '<button class="btn btn-primary small-button" onclick="showForm(\'edit\',\'/api/admin/users/' + row.id + '?formToken={{ formToken("/api/admin/users") }}&siteId={{ session.siteId }}\')">Edit</button>';
                        {% endif %}
                        {% if (not userRoles.Content.Users or userRoles.Content.Users.delete) %}
                        html += ' <button class="btn btn-danger small-button" onclick="if (confirm(\'Delete  record ?\')) { showForm(\'delete\',\'/api/admin/users/' + row.id + '?formToken={{ formToken("/api/admin/users") }}&siteId={{ session.siteId }}\');}">Del</button>';
                        {% endif %}
                        return html;

                    },
                    "sClass": "text-right",
                    "searchable": false
                }
                {% endif %}
            ],
            processing: true,
            serverSide: true,
            responsive: true,
            buttons: [
                {% if (not userRoles.Content.Users or userRoles.Content.Users.create) %}
                {
                    text: 'Create',
                    action: function (e, dt, node, config) {
                        let data = {};
                        showForm('create', '/api/admin/users/form?formToken={{ formToken("/api/admin/users") }}&siteId={{ session.siteId }}');
                    }
                },
                {% endif %}
                'copy', 'excel', 'pdf', 'print'

            ]
        });
    });
</script>
<div id="form"></div>
<div id="message"></div>
