<script>
    var engine = new Bloodhound({
        local: '{{ data.keywords }}'.split(','),
        datumTokenizer: function (d) {
            return Bloodhound.tokenizers.whitespace(d.value);
        },
        queryTokenizer: Bloodhound.tokenizers.whitespace
    });
    engine.initialize();
</script>
<input id="tags" name="keywords" data-role="tagsinput" class="form-control tokenfield" type="text"
       placeholder="Enter keywords" title="Please enter some keywords" value="{{ data.keywords }}" required>
<script>
    $('#tags').tagsinput({
        typeaheadjs: {
            name: 'value',
            displayKey: 'value',
            valueKey: 'value',
            source: engine.ttAdapter()
        }
    });
</script>